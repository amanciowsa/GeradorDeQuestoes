<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Gerador de Questões</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GeradorDeQuestoes.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger">

            <div class="container">
                <b><i><a class="navbar-brand text-light" href="/">UESF - União Educacional Sul Fluminense</a></i></b>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="col-3" style="margin-top: 25px">
                    <a class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">Gerar Questões</a>
                </div>

                
            </div>
            

        </nav>
        <div class="text-center">
            <h6 class="display-6">Gerador de Questões</h6>
        </div>
        <div class="text-center">
            <img src="~/imagens/uesf.jpg" height="400" alt="mdb logo" />
        </div>

    </header>
    <div class="container mt-2">
        @RenderBody()
    </div>


    <footer class="text-light bg-danger p-3 fixed-bottom text-center">
        <b><i>&copy; @DateTime.Now.Year.ToString() - R. Evelyn Ciuffo Cicarino Rocha, 126 - Progresso - Itaguaí- RJ - CEP: 23.810-460 - Contato: 2688-1157/96443-1926.</i></b>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
